{% import 'mixins/mixins.njk' as mixins %}
{% from 'title/title.njk' import title %}

<section class="steps" id="steps">
  <div class="container steps__container">
    {{ title(steps.title) }}
    <ul class="steps__list">
      {% for item in steps.list %}
        <li class="steps__item">
          <div class="steps__card">
            <div class="steps__item-img-wrap">
              {{ mixins.picture(item.pic) }}
            </div>
            <h3 class="steps__item-title">{{ item.title }}</h3>
            <p class="steps__item-text">{{ item.text | safe }}</p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>