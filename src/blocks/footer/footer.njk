{% from 'logo/logo.njk' import logo %}

<footer class="footer">
  <div class="container footer__container">
    <div class="footer__inner">
      <div class="footer__info-col">
        {{ logo({classes: 'footer__logo'}) }}
        <p class="footer__text">{{ footer.text }}</p>
        <p class="footer__cp">{{ footer.copy | safe }}</p>
      </div>
      <div class="footer__nav-col">
        {% for item in footer.lists %}
          <div class="footer__nav-item">
            <h3 class="footer__nav-item-title">{{ item.title }}</h3>
            <ul class="footer__list">
              {% for subitem in item.list %}
                <li class="footer__item">
                  <a href="#" class="footer__item-link">{{ subitem }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>